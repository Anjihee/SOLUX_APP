<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteMarketList">

    <RelativeLayout
        android:id="@+id/frame_1"
        android:layout_width="159dp"
        android:layout_height="299dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/frame_1"
        android:clipToOutline="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_member"
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:elevation="6dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/strawberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/strawberry" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/favorite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="168dp"
            android:text="딸기 1키로 공구하실 분 구합니다"
            android:textAppearance="@style/some_id"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/loacte"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="244dp"
            android:text="1시간전 /n 이태원동"
            android:textAppearance="@style/some_id2"
            android:gravity="top"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>